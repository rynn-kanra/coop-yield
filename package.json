{
  "name": "coop-yield",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "build": "bun run build:min.js && bun run build:js",
    "build:js": "bun build ./src/cooperative-yield.ts --outdir=dist/ --sourcemap=linked --target=node --format=esm",
    "build:min.js": "bun build ./src/cooperative-yield.ts --outdir=dist/ --sourcemap=linked --target=node --format=esm --minify --entry-naming=[dir]/[name].min.js",
    "test": "bun run test:unit && bun run test:fmt",
    "test:unit": "bun test ./test",
    "test:fmt": "prettier --check './*.{mjs,js,ts,md,json,html}' './{src,docs,tests}/{,**/}*.{mjs,js,ts,md,json,html}'",
    "fmt": "prettier --write './*.{mjs,js,ts,md,json,html}' './{src,docs,tests}/{,**/}*.{mjs,js,ts,md,json,html}'"
  },
  "author": {
    "name": "rynn-kanra",
    "email": "blackhaze879@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rynn-kanra/cooperative-yield.git"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/wicg-task-scheduling": "^2024.1.0",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
